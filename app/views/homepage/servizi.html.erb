                                    <button class="nav-mybutton" @click="showModal = false">Esci</button>
                                </div>
                            </form>
                        </div>
                    </transition>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card__copy">
                <div class="father-servizi">
