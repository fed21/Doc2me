    <main class="home">
        <div style="background: linear-gradient( #b1c9ce, white) ">
            <div class="urgenza-flex container">
                <div style="margin-right: 8%; margin-top: 14.4%;">
                    <%=image_tag("Icon Doctor.png", class:"img-logo",style:"width:80%; max-width:400px;",id:"im")%>
                </div>
