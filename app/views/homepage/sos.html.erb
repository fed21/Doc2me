                <!-- Registeration Form -->
                <div class=" login" style=" width:70%; margin-left:16%; margin-top:5%;margin-bottom:5%;">
                    
                   <form accept-charset="UTF-8" method="post">
                            
                        
                        <div class="row align-items-center" >
                            
                            <div class="col-lg-12 mx-auto mb-4">
                                
                                <h2 style="color:#04044c; font-weight: bold; margin-left: 2.5%; text-align: center;"> <%=image_tag("sos.svg", alt: "Example Image" , class:"img-sos") %>  </h2>
                                <p style="color:#04044c;  margin-left: 2.5%; text-align: center; font-size: 18px;">
                                    In caso di urgenza compila il form per essere ricontattato
                                    in pochi istanti dal nostro medico di turno!
                                </p>
                            </div>

                            <!-- First Name -->
                            
                            <div class="input-group col-lg-12 mx-auto mb-4">
                                <input  id="firstName" type="text" name="firstname" placeholder="Nome" class="form-control bg-white border-left-0 border-md" style="text-align: start" /> 
                            </div>
        
                            <!-- Last Name -->
                            <div class="input-group col-lg-12 mx-auto mb-4">
                                <input  id="lastName" type="text" name="lasttname" placeholder="Cognome" class="form-control bg-white border-left-0 border-md" style="text-align: start" />
                        
                            </div>
        
                            <!-- Email Address -->
                            <div class="input-group col-lg-12 mx-auto mb-4">
                                
                         <input  id="email" type="text" name="email" placeholder="Email" class="form-control bg-white border-left-0 border-md" style="text-align: start" /> 
                            
                            </div>
        
                            <!-- Telephone -->
                            <div class="input-group col-lg-12 mx-auto mb-4">
                                 <input id="tel" type="text" name="tel" placeholder="Telefono" class="form-control bg-white border-left-0 border-md" style="text-align: start" /> 
                            </div>

                            <!-- Submit Button -->
                            
        
                            <div class="form-group col-lg-12 mx-auto mb-0">
                                <input type="submit" value="Invia" id="sosinvio" class="nav-mybutton" style="margin-top:3%;margin-left:37%; height:6vh; width:10vw;background-color:#B00000">
                            </div>
        
                        </div>
                 </form>
