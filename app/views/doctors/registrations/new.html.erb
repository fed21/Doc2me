    <main>
        <div class="container">
            <div class="row py-5 mt-4 align-items-center ">
                
                <div class="col-md-5 pr-lg-5 mb-5 mb-md-0 log-div">
                <%=image_tag("Add User-amico.svg", alt: "Example Image" , class:"img-fluid mb-3 d-none d-md-block", style:"width: 100%; margin-left: 4%;")%>
                    
                    <h2 style="color:#04044c; font-weight: bold; text-align: center;">Aggiungi un dottore</h2>
                    
                </div>
                
                <!-- Registeration Form -->
                <div class="col-md-7 col-lg-5 ml-auto login">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        
                        <div class="row ">
        
                            <!-- First Name -->
                            <div class="input-group col-lg-12 mb-4">
                            <%= f.text_field :nome, autocomplete: "nome", required:true,id:"firstName",placeholder:"Nome" ,class:"form-control bg-white border-left-0 border-md",style:"text-align: start;" %>
                               
                            </div>
        
                            <!-- Last Name -->
                            <div class="input-group col-lg-12 mb-4">
                            <%= f.text_field :cognome, autocomplete: "cognome",required:true,id:"lastName",placeholder:"Cognome", class:"form-control bg-white border-left-0 border-md"%>
                               
                            </div>
        
                            <!-- Email Address -->
                            <div class="input-group col-lg-12 mb-4">
                            <%= f.email_field :email, autofocus: true, autocomplete: "email" ,required:true,placeholder:"Email",class:"form-control bg-white border-left-0 border-md "%>
                             
                            </div>
        
                            <!-- Password -->
                            <div class="input-group col-lg-12 mb-4">
                            <% if @minimum_password_length %>
                           
                            <% end %><br/>
                            <%= f.password_field :password,required:true, autocomplete: "new-password",id:"password", placeholder:"Password" ,class:"form-control bg-white border-left-0 border-md" %>
                                
                            </div>
                            <div class="input-group col-lg-12 mb-4">
                            <%= f.password_field :password_confirmation,required:true, autocomplete: "new-password",id:"password", placeholder:"Conferma Password" ,class:"form-control bg-white border-left-0 border-md" %>
            
                            </div>
                            <!-- Telephone -->
                            <div class="input-group col-lg-12 mb-4">
                            <%= f.number_field :telefono,required:true, autocomplete: "telefono",id:"tel",placeholder:"Cellulare", class:"form-control bg-white border-left-0 border-md"%>
                                
                            </div>
                            
                            <!-- Submit Button -->
                           
                  
                            <div class="form-group col-lg-12 mx-auto mb-0" style="margin-top:2%;">
                                
                            <%= f.submit "Registra dottore" , class:"nav-mybutton",style:"width:100%;height:5vh;"%>
                          
                            </div>
                        </div>
                        <% end %>
                </div>
            </div>
        </div>
