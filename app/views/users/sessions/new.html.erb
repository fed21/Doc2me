    <main>
        <div class="container">
            
            <div class="row py-5 mt-4 align-items-center">
                
                <div class="col-md-5 pr-lg-5 mb-5 mb-md-0 log-div">
                    <%=image_tag("Mobile login-amico.svg", alt: "Example Image" , class:"img-fluid mb-3 d-none d-md-block img-login")%>
                    
                    <h2 style="color:#04044c; font-weight: bold; text-align: center; margin-top: -15%;">Accedi come utente DOC2ME</h2>
                    
                </div>
                
                
                <div class="col-md-7 col-lg-5 ml-auto login">
                    
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        
                        <div class="row ">
        
                            
        
                            <!-- Email Address -->
                            <div class="input-group col-lg-12 mb-4">
                                
                                <%= f.email_field :email,required:true, autofocus: true, autocomplete: "email",id:"email",placeholder:"Email ",class:"form-control bg-white border-left-0 border-md"%>
                                
                            </div>
        
                            <!-- Password -->
                            <div class="input-group col-lg-12 mb-4">
                                
                                <%= f.password_field :password, required:true, autocomplete: "current-password",id:"password",placeholder:"Password",class:"form-control bg-white border-left-0 border-md"%>   
                                
                            </div>

                            

                            

                            <!-- Submit Button -->
                            <div class="form-group col-lg-12 mx-auto mb-0" style="margin-top:2%;">
                                <br>
                                  <%= f.submit "Accedi" , class:"nav-mybutton",style:"width: 100%;height:5vh;"%>
                                
                            </div>
                            <% end %>
        
                            <!-- Divider Text -->
                            <div class="form-group col-lg-12 mx-auto d-flex align-items-center my-4">
                                <div class="border-bottom w-100 ml-5"></div>
                                <span class="px-2 small text-muted font-weight-bold text-muted">oppure</span>
                                <div class="border-bottom w-100 mr-5"></div>
                            </div>
        
                            <!-- Social Login -->
                            <div class="form-group col-lg-12 mx-auto nav-mybutton text-center">
                                <%= link_to "Accedi con google ", user_google_oauth2_omniauth_authorize_path , class:"nav-mybutton",style:"width:90%;height:15vh;" %>
                            </div>
                               
                            <!-- Already Registered -->
                            <div class="text-center w-100" >
                            <br>
                                <p class="text-muted font-weight-bold">Sei un medico? <br><a href="<%= doctor_session_path%>" class="text-primary ml-2">Clicca qui per effettuare il login</a></p>
                                <p class="text-muted font-weight-bold">Non hai un account? <br><a href="<%=new_user_registration_path%>" class="text-primary ml-2">Clicca qui per registrati su DOC2ME</a></p>
                            </div>

                            <% flash.each do |type, msg| %>
                                <div class="alert alert-info" style="margin-top:10px; border-radius:10px">
                                    <%= msg %>
                                </div>
                            <%end%>
        
                        </div>
                    </form>
